      <Label text="原始檔案路徑">
         <GridPane.margin>
            <Insets left="10.0" top="10.0" />
         </GridPane.margin>
      </Label>
      <TextField fx:id="tfdSrcFile" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets left="10.0" top="10.0" />
         </GridPane.margin>
      </TextField>
      <Label text="結果目錄路徑" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="10.0" top="10.0" />
